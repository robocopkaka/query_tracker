<section class="section--center mdl-grid site-max-width">
<% @cases.each do |complaint| %>
    <div class="mdl-cell  mdl-card mdl-shadow--4dp portfolio-card">
        <!-- <div class="mdl-card__media">
            <img class="article-image" src="img/portfolio1.jpg" border="0" alt="">
        </div> -->
        <div class="mdl-card__title">
            <h2 class="mdl-card__title-text"><%= "Case #{complaint.id}" %></h2>
        </div>
        <div class="mdl-card__supporting-text">
            <p>Description: <%= truncate(complaint.description) %></p>
			<p>Assigned to: <%= User.find(complaint.assigned_to).name %></p>
			<p>Date Opened: <%= complaint.created_at.to_date %></p>
        </div>
        <div class="mdl-card__actions mdl-card--border">
        <%= link_to "View Case", case_path(complaint), class: "mdl-button mdl-button--accent mdl-js-button mdl-js-ripple-effect" %>
    </div>
    </div>
<% end %>
</section>
	

<%= will_paginate @cases %>
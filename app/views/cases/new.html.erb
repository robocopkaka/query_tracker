<%= form_for @case do |f| %>
	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		<%= f.text_area :description, class: 'mdl-textfield__input' %>
		<%= f.label :description, class: "mdl-textfield__label" %>
	</div>
	<div class="mdl-selectfield mdl-js-selectfield">
		<%= f.select(:category_id, options_from_collection_for_select(Category.all, :id, :name), class: "mdl-selectfield__select") %>
		<%= f.label :category, class: "mdl-selectfield__label" %>
	</div>
	

	<%= f.submit "Log your complaint", class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' %>
<% end %>

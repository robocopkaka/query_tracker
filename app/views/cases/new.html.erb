<%= form_for @case do |f| %>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control' %>
		<%= f.label :category %>
		<%= f.select(:category, options_for_select(@categories), class: 'form-control') %>
	</div>

	<%= f.submit "Log your complaint", class: 'btn btn-primary' %>
<% end %>

<button id="button" onclick="showhide()" class="btn btn-primary">Resolve Case</button>
<div id = "close_case" style="display:none;">
<!-- the form_for doesn't specify the action to be used, and doesn't need one, as it uses the update action
 since we specified the method as put, and tied it to the @case object -->
<%= form_tag(controller: 'cases', action: 'resolve', method: :put) do%>
	<%= label_tag :resolution_note %>
	<%= text_area_tag :resolution_note, class: 'form-control' %>
<!-- 	<%= select :status, Case.statuses.keys, class: 'btn btn-primary' %>  --> <!-- .statuses.keys retrieves the enum keys for status -->
	<br>
	<%= submit_tag "Resolve Case", class: 'btn btn-primary'  %>

<% end %>
</div>
<br/>

<!--  Make this onChange and let it have a message follow it-->
<!-- only an admin should be able to reassign cases -->
<% if !current_user.is_admin? %>
	<h3>Assign case to a different staff</h3>
	<br>
	<%= render 'cases/assign' %> 
<% end %>
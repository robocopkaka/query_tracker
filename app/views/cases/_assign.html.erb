<button id="button" onclick="showhide2()" class="btn btn-primary">Reassign Case</button>
<div id="reassign_case" style="display:none;">
	<%= form_for(@case, method: :put, remote: true) do |f|%>
		<%= f.select(:support_id, options_for_select(@users), selected: @case.assigned_to, class: 'form-control') %>
		<%= f.submit "Assign", class: 'btn btn-primary' %> <!-- Add a mail method to this button -->
	<% end %>
</div>